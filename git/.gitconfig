# This is Git's per-user configuration file.
[user]
	name = Luke OMalley
	email = luke@lukeomalley.xyz
	signingkey = /Users/luke/.ssh/id_ed25519


[gpg]
    format = ssh 

[core]
	pager = "diff-so-fancy | less --tabs=4 -RFX"
	autocrlf = input
	compression = 9  
	fsync = none
	editor = nvim
	whitespace = error

[color]
	ui = true

[commit]
	gpgSign = true

[push]
	autoSetupRemote = true
	default = current
	followTags = true
	gpgSign = false

[status]
	branch = true
	short = true
	showStash = true
	showUntrackedFiles = all

[pull]
	default = current
	rebase = true

[blame]
	coloring = highlightRecent
	date = relative

[log]
	abbrevCommit = true  # short commits
	graphColors = blue,yellow,cyan,magenta,green,red

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[init]
	defaultBranch = main

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[rerere]
	enabled = true

[diff-so-fancy]
    markEmptyLines = false

[gpg "ssh"]
	allowedSignersFile = /Users/luke/.ssh/allowed_signers
